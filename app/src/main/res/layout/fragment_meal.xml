<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".one_meal.view.MealFragment">

    <ImageView
        android:id="@+id/swapup"
        android:layout_width="75dp"
        android:layout_height="47dp"
        android:layout_marginBottom="124dp"
        android:src="@drawable/swapup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/swap"
        app:layout_constraintStart_toStartOf="@+id/swap" />

    <FrameLayout
        android:id="@+id/frameMeal"
        android:layout_width="445dp"
        android:layout_height="659dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="188dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="431dp"
            android:layout_height="546dp"
            android:layout_gravity="top|center"
            android:layout_margin="16dp"
            android:background="@drawable/backgroundformeal"
            android:elevation="15dp"
            app:cardCornerRadius="35dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/onemealImage"
                    android:layout_width="150dp"
                    android:layout_height="139dp"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="152dp"
                    android:layout_marginBottom="208dp"
                    android:translationZ="6dp"
                    app:layout_constraintBottom_toBottomOf="@+id/backmeal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.52"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.44"
                    app:shapeAppearanceOverlay="@style/roundedImageView" />

                <ImageView
                    android:id="@+id/backmeal"
                    android:layout_width="587dp"
                    android:layout_height="617dp"
                    android:layout_gravity="center"
                    android:src="@drawable/backgroundformeal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/backBtnMeal"
                    android:layout_width="46dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="112dp"
                    android:src="@drawable/arrow_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/colo"
            android:layout_width="303dp"
            android:layout_height="160dp"
            android:layout_gravity="bottom|center"
            android:layout_margin="16dp"
            android:elevation="15dp"
            app:cardBackgroundColor="@color/lightgray"
            app:cardCornerRadius="35dp">

            <TextView
                android:id="@+id/onemealName"
                android:layout_width="292dp"
                android:layout_height="89dp"
                android:layout_gravity="center"
                android:gravity="top|center"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="24sp" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <Button
        android:id="@+id/savebtn"
        android:layout_width="50dp"
        android:layout_height="58dp"
        android:layout_gravity="bottom|center_horizontal"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/frameMeal"
        app:layout_constraintEnd_toEndOf="@+id/swap"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/swap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="3dp"
        android:src="@drawable/_774071_bookmark_favorite_like_favourite_save_icon"
        app:layout_constraintBottom_toBottomOf="@+id/savebtn"
        app:layout_constraintEnd_toEndOf="@+id/savebtn"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="@+id/savebtn"
        app:layout_constraintTop_toTopOf="@+id/savebtn" />

    <Button
        android:id="@+id/planbtn"
        android:layout_width="50dp"
        android:layout_height="58dp"
        android:layout_gravity="bottom|center_horizontal"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/frameMeal"
        app:layout_constraintEnd_toEndOf="@+id/swap"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@+id/swap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" />

    <ImageView
        android:id="@+id/imageplan"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_margin="3dp"
        android:src="@drawable/schedule_event_icon__1_"
        app:layout_constraintBottom_toBottomOf="@+id/planbtn"
        app:layout_constraintEnd_toEndOf="@+id/planbtn"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="@+id/planbtn"
        app:layout_constraintTop_toTopOf="@+id/planbtn" />

    <TextView
        android:id="@+id/swap"
        android:layout_width="261dp"
        android:layout_height="52dp"
        android:gravity="center|top"
        android:text="@string/swapup"
        android:textColor="@color/darker_gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameMeal" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swapup"
        app:srcCompat="@drawable/backgroundbot" />


</androidx.constraintlayout.widget.ConstraintLayout>
