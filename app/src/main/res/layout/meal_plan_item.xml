<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/frameMealplan"
        android:layout_width="263dp"
        android:layout_height="184dp"
        android:layout_gravity="bottom|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029">


        <androidx.cardview.widget.CardView
            android:layout_width="252dp"
            android:layout_height="162dp"
            android:layout_gravity="bottom|center"
            android:layout_margin="16dp"
            android:elevation="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="35dp">

            <ImageView
                android:id="@+id/mealPlanimg"
                android:layout_width="432dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top"
                android:translationZ="6dp"
                app:shapeAppearanceOverlay="@style/roundedImageView" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="255dp"
                android:layout_height="167dp">

                <TextView
                    android:id="@+id/mealPlantxt"
                    android:layout_width="254dp"
                    android:layout_height="58dp"
                    android:layout_gravity="bottom|center"
                    android:background="#22050505"
                    android:gravity="center|top"
                    android:paddingBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.972" />

                <TextView
                    android:id="@+id/date_pickertxt"
                    android:layout_width="90dp"
                    android:layout_height="27dp"
                    android:gravity="center"
                    android:text="TextView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/mealPlantxt"
                    app:layout_constraintHorizontal_bias="0.506"
                    app:layout_constraintStart_toStartOf="@+id/mealPlantxt" />

                <ImageView
                    android:id="@+id/removeIcon"
                    android:layout_width="27dp"
                    android:layout_height="23dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/mealPlantxt"
                    app:srcCompat="@drawable/trash_icon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>